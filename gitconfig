[core]
  editor = code --wait

[push]
  default = current

[alias]
  a = add .
  d = diff
  s = status

  ca = commit --amend
  can = commit --amend --no-verify
  cm = commit --message
  cn = commit --no-verify

  f = fetch
  p = push
  pl = pull

  st = stash
  stc = stash clear
  stl = stash list
  stp = stash pop

  b = branch
  bd = branch -D
  bm = branch -m

  c = checkout
  cb = checkout -b

  r = rebase
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase --interactive
  ro = rebase --onto
